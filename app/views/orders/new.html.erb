お買い物リストに登録
<%= form_with model: @order, url: group_orders_path(@group.id), local: true do |f| %>

  <% if @item.image.attached? %>
    <%= @item.category.name %>
    <%= image_tag @item.image.variant(resize: '300x200'), class: 'item-images' %>
  <% else %>
    <%= @item.category.name %>
  <% end %>

  <input name="order[category_id]" value=<%= @item.category_id %> type=hidden>

  <div>
  <%= f.label '優先度（必須）'%>
  <%= f.collection_select(:priority_id, Priority.all, :id, :name, {}, {class:"priority-select"}) %>
  </div>

  <div>
  <%= f.label 'お買い物メモ（任意）'%>
  <%= f.text_field :memo, class:"memo", placeholder:"(例)お母さん用" %>
  </div>

  <input name="order[item_id]" value=<%= @item.id %> type=hidden>

  <%= f.submit "買い物リストに登録" %>

  <%= link_to '戻る',  group_items_path(@group.id) %>
<% end %>