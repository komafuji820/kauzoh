<%= link_to '続けて投稿する', group_items_path(@group.id) %>
<%= link_to 'グループTOPへ戻る', group_path(@group.id) %>

<% @orders.each do |order| %>
  
  <ul>
  <ul><% if order.item.image.attached? %>
      <li><%= image_tag order.item.image.variant(resize: '300x200'), class: 'item-images' %></li>
      <li>メモ：<%= order.memo %></li>
      <li>優先度：<%= order.priority.name %></li>
      <li>カテゴリ：<%= order.item.category.name %></li>
      <% else %>
      <li>メモ：<%= order.memo %></li>
      <li>優先度：<%= order.priority.name %></li>
      <li>カテゴリ：<%= order.item.category.name %></li>
      <% end %>
  </ul>
  <%= link_to '編集', edit_group_order_path(id: order.id) %>
  <%= link_to '削除', group_order_path(id: order.id), data:{turbo_method: :delete} %>
<% end %>