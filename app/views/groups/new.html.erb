<div class="main__wrapper">
  <div class="main__section">

    <div class="create-group__section">
      <%= form_with model: @group, class:"create-group", local: true do |f| %>
        
        <div class="create-group__member-list">
        <% if @members.present? %>
          <div class="create-group__explain">
            このメンバーとグループを作成
          </div>
          <% @members.each do |member| %>  
            <div class="create-group__member-name">
            <%= member.nickname %>
            <%= member.email %>
            <input name="group[user_ids][]" value=<%= member.id %> type="hidden">
            </div>
          <% end %>
        <% else %>
        <div class="create-group__explain">
          <%= "#{current_user.nickname}さんだけのグループを作成" %>
        </div>
        <% end %>
        </div>

        <div class="create-group__input-name">
          <div class="field">
          <%= f.label 'グループ名を入力してください', class:"create-group__input" %><br />
          <%= f.text_field :name, autocomplete: "name", placeholder: 'グループ名', class:"create-group__form" %>

          <input name="group[user_ids][]" value=<%= current_user.id %> type="hidden">
          </div>

          <div class="actions">
          <%= f.submit "グループを作成", class:"create-group__btn" %>
          </div>
        </div>

      <% end %>
    </div>
    <%= link_to 'ユーザー検索に戻る', search_users_path, class:"return-link"  %>
    
  </div>
  <%= render partial: 'list' %>
</div>