<div class="main__wrapper">
  <div class="main__section">

    <div class="group__detail">
      <div class="group__main-section-name">
        グループ：<%= @group.name %>
      </div>
      <div class="group__member">
        メンバー：
        <% @users.each do |user| %>
          <%= user.nickname %>
        <% end %>
      </div>
      <ul class="group__item">
        <% if @group.items.present? %>
          <li><%= link_to '在庫を見る・編集する', group_items_path(@group.id), class:"check-item" %></li>
        <% else %>
          <li><%= link_to 'New! 在庫管理をはじめる', new_group_item_path(@group.id), class:"add-item" %></li>
        <% end %>
      </ul>
      <ul class="group__order">
        <% if @group.orders.present? %>
          <li><%= link_to 'お買い物リストを見る・編集する', group_orders_path(@group.id), class:"check-order" %></li>
        <% else %>
          <li><%= link_to 'New! お買い物リストを作る', new_group_order_path(@group.id), class:"create-order" %></li>
        <% end %>
      </ul>
      <ul class="group__edit">
        <li><%= link_to 'グループを編集する', "#", class:"edit-group" %></li>
        <li><%= link_to 'グループを削除する', group_path(@group.id), data: { turbo_method: :delete }, class:"delete-group" %></li>
      </ul>
    </div>
    
  </div>
  <%= render partial: 'list' %>
</div>