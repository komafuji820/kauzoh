<div class="wrapper">
  <div class="wrapper__side-bar">
    <%= render partial: '/groups/lists' %>
  </div>

  <div class="wrapper__main">
    <%= render partial: '/groups/create_group_link' %>
    <div class="wrapper__main-body">
      
      <div class="search-user__title">
        家族・友達を検索
      </div>
 
      <%= form_with url: search_results_users_path, method: :get, local: true do |f| %>
        <div class="search-user__form"> 
          <div class="search-user__field">
            <%= f.label '登録のニックネームまたはメールアドレスで検索できます' %><br>
            <%= f.text_field :keyword, autofocus: true, placeholder: "ユーザーを検索", class:"search-user__input" %>
          </div>

          <div class="search-user__actions">
            <%= f.submit "検索", class:'search-user__btn' %>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>