<div class="items-form">
<%= form_with model: @item, local: true do |f| %>
  <div>
  <%= f.label 'カテゴリーを選ぶ'%>
  </div>
  <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"category-select"}) %>
  <div>
  <%= f.label '在庫メモ（任意）'%>
  </div>
  <%= f.text_field :memo, class:"memo", placeholder:"(例)賞味期限は12/31" %>
  <div>
  <%= f.label '画像を選ぶ（任意）'%>
  </div>
  <%= f.file_field :image %>
  <div>
  <%= f.submit "修正" ,class:"add-items-btn" %>
  </div>
<% end %>
</div>

<%= link_to '削除する', item_path(@item.id), data:{turbo_method: :delete} %>

<%= link_to '戻る', group_items_path(@item.group.id) %>