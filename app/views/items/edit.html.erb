<div class="wrapper">
  <div class="wrapper__side-bar">
    <%= render partial: '/groups/lists' %>
  </div>

  <div class="wrapper__main">
    <%= render partial: '/groups/nav_bar' %>
    <div class="wrapper__main-body">

      <div class="item__main-body">
        <div class="item-nav-bar">
          <%= render partial: 'nav_bar' %>
        </div>

        <div class="edit-item__wrapper">
          
          <%= form_with model: @item, local: true do |f| %>
            <div class="edit-item__form">
            
              <div class="edit-item__title"><%= '在庫を修正' %></div>

              <%= render partial: 'form', locals:{ f: f } %>

              <div class="edit-item__actions">
                <%= f.submit '修正', class:"edit-item__btn" %>
                <%= link_to '削除', item_path(@item.id), data:{turbo_method: :delete}, class:"edit-item__delete-btn" %>
              </div>

            </div>
          <% end %>
          
        </div>
      
      </div>

    </div>
  </div>
</div>