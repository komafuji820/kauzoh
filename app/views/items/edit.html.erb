<div class="items-form">
<%= form_with model: @item, url: group_item_path(@item.group.id), local: true do |f| %>
  <div>
  <%= f.label 'カテゴリーを選ぶ'%>
  </div>
  <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"category-select"}) %>
  <div>
  <%= f.label 'メモ（任意）'%>
  </div>
  <%= f.text_field :memo, class:"memo", placeholder:"(例)賞味期限は12/31" %>
  <div>
  <%= f.label '画像を選ぶ（任意）'%>
  </div>
  <%= f.file_field :image %>
  <div>
  <%= f.submit "修正" ,class:"add-items-btn" %>
  <%= link_to '戻る',  group_item_path(id: @item.id) %>
  </div>
<% end %>
</div>