<div class="wrapper">
  <div class="wrapper__side-bar">
    <%= render partial: '/groups/lists' %>
  </div>

  <div class="wrapper__main">
    <%= render partial: '/groups/nav_bar', locals:{ group: @group } %>
    <div class="wrapper__main-body">

      <div class="item__main-body">
        <div class="item-nav-bar">
          <%= render partial: 'nav_bar', locals:{ group: @group } %>
        </div>

        <div class="new-item__wrapper">
          
          <%= form_with model: @item, url: group_items_path(@group.id), local: true do |f| %>
            <div class="new-item__form">
            
              <div class="new-item__title"><%= '在庫登録' %></div>

              <%= render partial: 'form', locals:{ f: f } %>

              <div class="new-item__actions">
                <%= f.submit '登録', class:"new-item__btn" %>
              </div>

            </div>
          <% end %>
          
        </div>
      
      </div>

    </div>
  </div>
</div>