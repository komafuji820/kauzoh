<div class="items-form">
<%= form_with model: @item, url: group_items_path(@group.id), local: true do |f| %>
  
  <div>
  <%= f.label 'カテゴリを選ぶ（必須）'%>
  <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"category-select"}) %>
  </div>
  
  <div>
  <%= f.label 'メモ（任意）'%>
  <%= f.text_field :memo, class:"memo", placeholder:"(例)賞味期限は12/31" %>
  </div>

  <div>
  <%= f.label '画像を選ぶ（任意）'%>
  <%= f.file_field :image %>
  </div>

  <div>
  <%= f.submit '登録', class:"add-items-btn" %>
  </div>
  
<% end %>
</div>