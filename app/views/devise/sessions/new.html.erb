<div class="sign-in-wrapper">
  <div class="sign-in-section">
    <div class="sign-in-title">
      ログイン
    </div>

    <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <div class='flash-message'>
        <%= flash[:notice] %>
        <%= flash[:alert] %>
      </div>
      <div class="field">
        <%= f.label 'メールアドレス' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class:"sign-in-form" %>
      </div>

      <div class="field">
        <%= f.label 'パスワード' %><br />
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class:"sign-in-form" %>
      </div>

      <div class="actions">
        <%= f.submit "ログイン", class:"sign-in-btn" %>
      </div>
    <% end %>
  </div>
</div>